package  {		import flash.display.MovieClip;	import flash.events.MouseEvent;	//import flash.display3D.IndexBuffer3D;			public class Garden extends MovieClip 	{		private var totalScore:int; //declare totalScore of type int		private var gardenArray1:Array=new Array(10); //declare several arrays with size 10 named gardenArray 1,2,3 respectively		private var gardenArray2:Array=new Array(10);		private var gardenArray3:Array=new Array(10);		private var clicks:int=0;												public function Garden() 		{			//var gardenArray1:Array= new Array[10]			for (var i:int=0; i<10;i++) // a for loop that walks through all three of the gardenArrays			{				gardenArray1[i]= new MundaneMole(); //assigns a MundaneMole to every array in the gardenArray1				gardenArray1[i].x=Math.random()*600; //assign it to a random x coordinate				gardenArray1[i].y=Math.random()*400;				; //assign it to a random y coordinate				addChild(gardenArray1[i]); //add it to garden class				gardenArray1[i].addEventListener(MouseEvent.CLICK, getTotalScore); //add eventListener to every MundaneMole								gardenArray2[i]=new RabidMole(); //assign a rabid mole to every array in gardenArray2				gardenArray2[i].x=Math.random()*600; //assign to random x,y coordinate				gardenArray2[i].y=Math.random()*400;				addChild(gardenArray2[i]); //add it to the garden				gardenArray2[i].addEventListener(MouseEvent.CLICK, getTotalScore); // add eventListener to every single Rabid mole								gardenArray3[i]=new StoneMole(); //assign a stone mole to every array in gardenArray				gardenArray3[i].x=Math.random()*600; //assign it to a random coordinate				gardenArray3[i].y=Math.random()*400;				addChild(gardenArray3[i]); //add it				gardenArray3[i].addEventListener(MouseEvent.CLICK,getTotalScore); //add event listener to every rabid mole and when the mole is clicked call function getTotalScore							}			// constructor code		}				public function getTotalScore(e:MouseEvent):void //declare function with MouseEvent as parameter with void return type		{			for (var i:int=0; i<10;i++) //for loop that goes through every slot in the arrays			{				if (e.target==gardenArray1[i]) //if you clicked on any of the mundane moles				{					totalScore=totalScore+1; //your score increases by 1				}				else if (e.target===gardenArray2[i]) //if you clicked a rabid mole 5 times								{										clicks++;					if (clicks>=3)					{						totalScore=totalScore+5;						clicks=0;					}//your score increases by 5				}								else if (e.target==gardenArray3[i]) //if you click a stoneMole			    {					totalScore=totalScore-1; //score decreases by 1				}			}						scoreBox.text = intToString(totalScore);		}		public function intToString( i : int ) : String 		{    // You should not understand this right now!    		return i.toString();		}				}	}	